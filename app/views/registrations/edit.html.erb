<div class="form-container">
  <h1>Edit Registration</h1>
  
  <%= form_with(model: @registration, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :birthday %>
      <%= form.date_field :birthday, required: true %>
    </div>

    <div class="form-group gender-group">
      <%= form.label :gender %>
      <div>
        <%= form.radio_button :gender, 'male' %>
        <%= form.label :gender_male, 'Male' %>
        <%= form.radio_button :gender, 'female' %>
        <%= form.label :gender_female, 'Female' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :phone_number %>
      <%= form.telephone_field :phone_number, required: true %>
    </div>

    <div class="form-group full-width">
      <%= form.label :subject %>
      <%= form.select :subject, options_for_select([['Choose option', ''], ['Option 1', 'option1'], ['Option 2', 'option2'], ['Option 3', 'option3']], @registration.subject), {}, required: true %>
    </div>

    <div class="submit-container">
      <%= link_to 'Back', registrations_path, class: 'back-link' %>
      <%= form.submit 'Update Registration' %>
    </div>
  <% end %>
</div>