<div class="container">
  <h1>Registrations</h1>

  <div class="cards-container">
    <%= link_to 'New Registration', new_registration_path, class: 'new-registration-btn' %>
    <% @registrations.each do |registration| %>
      <div class="card">
        <h2><%= "#{registration.first_name} #{registration.last_name}" %></h2>
        <p><strong>Birthday:</strong> <%= registration.birthday.strftime('%B %d, %Y') %></p>
        <p><strong>Gender:</strong> <%= registration.gender.capitalize %></p>
        <p><strong>Email:</strong> <%= registration.email %></p>
        <p><strong>Phone:</strong> <%= registration.phone_number %></p>
        <p><strong>Subject:</strong> <%= registration.subject %></p>
        <div class="card-actions">
          <%= link_to 'Edit', edit_registration_path(registration), class: 'btn btn-edit' %>
          <%= button_to 'Delete', confirm_destroy_registration_path(registration), method: :get, class: 'btn btn-delete', data: { turbo_frame: "modal" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= turbo_frame_tag "modal" %>